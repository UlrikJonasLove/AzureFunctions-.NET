@model Customer
@{
    ViewData["Title"] = "Home Page";
}


<form method="post" enctype="multipart/form-data">
    <div class="text-center">
        <h1 class="display-4">Add new Customer</h1>
        <p>Enter new customer info</p>
        <div class="row">
            <div class="col-3">
                Name:
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                Email:
            </div>
            <div class="col-6">
                <input asp-for="Email" class="form-control" type="email" />
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                Phone:
            </div>
            <div class="col-6">
                <input asp-for="Phone" class="form-control" type="number" />
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                Address:
            </div>
            <div class="col-6">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                Age
            </div>
            <div class="col-6">
                <input asp-for="Age" class="form-control" type="number" />
            </div>
            <div class="row">
                <div class="col-3">
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-success">Add new Customer</button>
                </div>
            </div>
        </div>
</form>